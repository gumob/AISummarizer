{
  "manifest_version": 3,
  "name": "Free AI Summarizer",
  "version": "0.0.1",
  "description": "Summarize YouTube videos and news articles with AI without any cost. This extension does not require an API key or login access.",
  "permissions": ["storage", "tabs", "scripting", "activeTab", "offscreen", "contextMenus", "sidePanel", "alarms", "clipboardWrite"],
  "host_permissions": ["<all_urls>"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/color/icon16.png",
      "48": "icons/color/icon48.png",
      "128": "icons/color/icon128.png"
    }
  },
  "icons": {
    "16": "icons/color/icon16.png",
    "48": "icons/color/icon48.png",
    "128": "icons/color/icon128.png"
  },
  "background": {
    "service_worker": "service-worker.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "options_page": "options.html",
  "side_panel": {
    "default_path": "options.html"
  },
  "web_accessible_resources": [
    {
      "resources": ["globals.css", "pdf.worker.min.mjs"],
      "matches": ["<all_urls>"]
    }
  ]
}
